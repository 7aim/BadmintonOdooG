<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="module_category_volan_genclik">
            <field name="name">Volan Genclik</field>
            <field name="description">Volan Genclik modulu üçün istifadəçi rolları</field>
            <field name="sequence">25</field>
        </record>
        
        <record id="group_genclik_satici" model="res.groups">
            <field name="name">Genclik Satıcı</field>
            <field name="category_id" ref="module_category_volan_genclik"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_genclik_mesqci" model="res.groups">
            <field name="name">Genclik Məşqçi</field>
            <field name="category_id" ref="module_category_volan_genclik"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_genclik_nezaretci" model="res.groups">
            <field name="name">Genclik Nəzarətçi</field>
            <field name="category_id" ref="module_category_volan_genclik"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_genclik_admin" model="res.groups">
            <field name="name">Genclik Admin</field>
            <field name="category_id" ref="module_category_volan_genclik"/>
            <field name="implied_ids" eval="[(4, ref('group_genclik_satici')), (4, ref('group_genclik_mesqci')), (4, ref('group_genclik_nezaretci'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="rule_partner_genclik_only" model="ir.rule">
            <field name="name">Partners: Yalnız genclik Filialı</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('branch', '=', 'genclik')]</field>
            <field name="groups" eval="[(4, ref('group_genclik_satici')), (4, ref('group_genclik_nezaretci'))]"/>
        </record>
        
        <record id="rule_partner_admin_all_genclik" model="ir.rule">
            <field name="name">Partners: Genclik Admin bütün filialları görür</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_genclik_admin'))]"/>
        </record>
        
        <record id="rule_partner_trainer_genclik" model="ir.rule">
            <field name="name">Partners: Genclik Məşqçi yalnız özünü görür</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('user_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_genclik_mesqci'))]"/>
        </record>

    </data>
</odoo>