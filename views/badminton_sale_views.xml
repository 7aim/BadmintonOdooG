<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Badminton Sale Form View -->
    <record id="view_badminton_sale_genclik_form" model="ir.ui.view">
        <field name="name">badminton.sale.genclik.form</field>
        <field name="model">badminton.sale.genclik</field>
        <field name="arch" type="xml">
            <form string="Badminton Satışı">
                <header>
                    <button name="action_confirm" string="Təsdiqlə" 
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_mark_paid" string="Ödənilib" 
                            type="object" class="btn-success"
                            invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_cancel" string="Ləğv et" 
                            type="object" class="btn-secondary"
                            invisible="state not in ['draft', 'confirmed']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}" 
                                   domain="[('is_company', '=', False), ('branch', '=', 'genclik')]"/>
                            <field name="customer_type"/>
                            <field name="package_type"/>
                            <field name="sale_date"/>
                            <field name="expiry_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="is_package" invisible="1"/>
                            <field name="hours_quantity"/>
                            <field name="unit_price"/>
                            <field name="total_amount" readonly="1"/>
                            <field name="state" readonly="1"/>
                        </group>
                    </group>
                    <group string="Ödəniş Məlumatları">
                        <group>
                            <field name="payment_date"/>
                        </group>
                        <group>
                            <field name="credited_hours" readonly="1"/>
                        </group>
                    </group>
                    <group string="Qeydlər">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Badminton Sale list View -->
    <record id="view_badminton_sale_genclik_list" model="ir.ui.view">
        <field name="name">badminton.sale.genclik.list</field>
        <field name="model">badminton.sale.genclik</field>
        <field name="arch" type="xml">
            <list string="Badminton Satışları" decoration-success="state=='paid'" decoration-info="state=='confirmed'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="customer_type"/>
                <field name="package_type"/>
                <field name="hours_quantity"/>
                <field name="total_amount"/>
                <field name="sale_date"/>
                <field name="expiry_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Badminton Sale Search View -->
    <record id="view_badminton_sale_genclik_search" model="ir.ui.view">
        <field name="name">badminton.sale.genclik.search</field>
        <field name="model">badminton.sale.genclik</field>
        <field name="arch" type="xml">
            <search string="Badminton Satışları">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="customer_type"/>
                <field name="package_type"/>
                <separator/>
                <filter string="Uşaq" name="child" domain="[('customer_type','=','child')]"/>
                <filter string="Böyük" name="adult" domain="[('customer_type','=','adult')]"/>
                <separator/>
                <filter string="Tək Saat" name="single" domain="[('package_type','=','single')]"/>
                <filter string="8 Giriş Paketi" name="package_8" domain="[('package_type','=','package_8')]"/>
                <filter string="12 Giriş Paketi" name="package_12" domain="[('package_type','=','package_12')]"/>
                <group expand="0" string="Qrupla">
                    <filter name="group_by_partner" string="Müştəri" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_customer_type" string="Müştəri Növü" context="{'group_by': 'customer_type'}"/>
                    <filter name="group_by_package_type" string="Paket Növü" context="{'group_by': 'package_type'}"/>
                    <filter name="group_by_state" string="Vəziyyət" context="{'group_by': 'state'}"/>
                    <filter name="group_by_date" string="Tarix" context="{'group_by': 'sale_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Badminton Sales -->
    <record id="action_badminton_sale_genclik" model="ir.actions.act_window">
        <field name="name">Badminton Satışları</field>
        <field name="res_model">badminton.sale.genclik</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Yeni badminton satışı yaradın!
            </p>
            <p>
                Burada müştərilərə badminton saatları satıb onların hesabına əlavə edə bilərsiniz.
            </p>
        </field>
    </record>

    <!-- Badminton Balance History list View -->
    <record id="view_badminton_balance_history_list" model="ir.ui.view">
        <field name="name">badminton.balance.history.genclik.list</field>
        <field name="model">badminton.balance.history.genclik</field>
        <field name="arch" type="xml">
            <list string="Badminton Balans Tarixçəsi" create="false" edit="false">
                <field name="transaction_date"/>
                <field name="partner_id"/>
                <field name="transaction_type"/>
                <field name="hours_added"/>
                <field name="hours_used"/>
                <field name="balance_after"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Action for Badminton Balance History -->
    <record id="action_badminton_balance_history" model="ir.actions.act_window">
        <field name="name">Badminton Balans Tarixçəsi</field>
        <field name="res_model">badminton.balance.history.genclik</field>
        <field name="view_mode">list</field>
        <field name="context">{}</field>
    </record>
</odoo>
