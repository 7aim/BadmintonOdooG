<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Badminton Session: FORM view (keeps your old buttons + adds Test) -->
    <record id="view_badminton_session_genclik_form" model="ir.ui.view">
        <field name="name">badminton.session.genclik.form</field>
        <field name="model">badminton.session.genclik</field>
        <field name="arch" type="xml">
            <form string="Badminton Sessiyası">
                <header>
                    <!-- Badminton Satışı düyməsi -->
                    <button name="%(action_badminton_sale_wizard_genclik)d"
                            string="Balans Yüklə"
                            type="action"
                            class="btn-info"
                            context="{'default_partner_id': partner_id}"/>
                    
                    <!-- Düymə: sessiya draft vəziyyətindədirsə "Başlat" göstər -->
                    <button name="start_session_manual"
                            string="Sessiyanı Başlat"
                            type="object"
                            class="btn-success"
                            invisible="state != 'draft'"/>
                    
                    <!-- Aktiv sessiyalar üçün mövcud düymələr -->
                    <button name="complete_session"
                            string="Sessiyanı Tamamla"
                            type="object"
                            class="btn-primary"
                            invisible="state not in ['active', 'extended']"/>

                    <button name="action_extend_session_wizard"
                            string="Sessiyanı Uzat"
                            type="object"
                            class="btn-warning"
                            invisible="state not in ['active', 'extended']"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,active,extended,completed"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                        <h2 invisible="state != 'draft'">
                            <field name="queue_number" readonly="1" string="Növbə: "/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" 
                                   domain="[('is_company', '=', False), ('sport_type', 'in', ['badminton', 'both']), ('branch', '=', 'genclik')]"
                                   context="{'default_branch': 'genclik', 'default_sport_type': 'badminton'}"
                                   required="1"
                                   readonly="state != 'draft'"/>
                            <field name="has_package" invisible="1"/>
                            <field name="session_package_id" invisible="not has_package" readonly="state != 'draft'"/>
                            <field name="promo_type" readonly="state != 'draft'"/>
                            <field name="payment_type" readonly="state != 'draft'"/>
                            <field name="duration_hours" readonly="state != 'draft'"/>
                            <field name="start_time" readonly="1"/>
                            <field name="end_time" readonly="1"/>
                            <field name="completion_time" readonly="1" invisible="[('state', '!=', 'completed')]"/>
                            <field name="qr_scanned" readonly="1"/>
                            <field name="qr_link" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="extended_time" readonly="1"/>
                            <field name="recently_completed" invisible="1"/>
                            <field name="qr_image"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Qeydlər">
                            <field name="notes" readonly="state != 'draft'"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View with Filters -->
    <record id="view_badminton_session_genclik_search" model="ir.ui.view">
        <field name="name">badminton.session.genclik.search</field>
        <field name="model">badminton.session.genclik</field>
        <field name="arch" type="xml">
            <search string="Sessiyalar">
                <field name="name" string="Sessiya Nömrəsi"/>
                <field name="partner_id" string="Müştəri"/>
                <field name="session_package_id" string="Paket"/>
                <separator/>
                <filter string="Gözləmədə" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Aktiv" name="filter_active" domain="[('state', '=', 'active')]"/>
                <filter string="Uzadılıb" name="filter_extended" domain="[('state', '=', 'extended')]"/>
                <filter string="Tamamlanıb" name="filter_completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Ləğv edilib" name="filter_cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="1FIT" name="filter_1fit" domain="[('promo_type', '=', '1fit')]"/>
                <filter string="PUSH30" name="filter_push30" domain="[('promo_type', '=', 'push30')]"/>
                <filter string="PUSH30+" name="filter_push30_plus" domain="[('promo_type', '=', 'push30_plus')]"/>
                <filter string="Tripsome" name="filter_tripsome" domain="[('promo_type', '=', 'tripsome')]"/>
                <separator/>
                <filter string="Nağd" name="filter_cash" domain="[('payment_type', '=', 'cash')]"/>
                <filter string="Kartdan karta" name="filter_card" domain="[('payment_type', '=', 'card')]"/>
                <filter string="Abunəçi" name="filter_abonent" domain="[('payment_type', '=', 'abonent')]"/>
                <separator/>
                <group expand="0" string="Qruplaşdırma">
                    <filter string="Müştəri" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Vəziyyət" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tətbiq" name="group_promo" context="{'group_by': 'promo_type'}"/>
                    <filter string="Ödəniş Növü" name="group_payment" context="{'group_by': 'payment_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Badminton Session: LIST view (keeps your original header + adds Test button) -->
    <record id="view_badminton_session_genclik_list" model="ir.ui.view">
        <field name="name">badminton.session.genclik.list</field>
        <field name="model">badminton.session.genclik</field>
        <field name="arch" type="xml">
            <list string="Badminton Sessiyaları">
                    <!--
                  decoration-success="state=='completed' and not recently_completed"
                  decoration-warning="state=='active' and not warn10_sent"
                  decoration-danger="warn10_sent"
                  decoration-info="state=='extended' and not warn10_sent"
                  decoration-primary="recently_completed">
                    -->
                <!--<field name="name"/>-->
                <field name="partner_id"/>
                <field name="session_package_id"/>
                <field name="promo_type"/>
                <field name="payment_type"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="completion_time"/>
                <field name="duration_hours"/>
                <field name="extended_time"/>
                <field name="state"/>
                <field name="recently_completed" invisible="1"/>
                <field name="warn10_sent" invisible="1"/>
                <button name="start_session_manual" string="Başlat" type="object" icon="fa-play" 
                        invisible="state != 'draft'" class="btn-success"/>
                <button name="extend_session" string="Uzat" type="object" icon="fa-clock-o"
                        invisible="state not in ['active', 'extended']"/>
                <button name="complete_session" string="Tamamla" type="object" icon="fa-check"
                        invisible="state not in ['active', 'extended']"/>
            </list>
        </field>
    </record>

    <!-- Active Sessions Search View -->
    <record id="view_active_sessions_genclik_search" model="ir.ui.view">
        <field name="name">active.badminton.session.genclik.search</field>
        <field name="model">badminton.session.genclik</field>
        <field name="arch" type="xml">
            <search string="Aktiv Sessiyalar">
                <field name="name" string="Sessiya Nömrəsi"/>
                <field name="partner_id" string="Müştəri"/>
                <field name="session_package_id" string="Paket"/>
                <separator/>
                <filter string="Gözləmədə" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Aktiv" name="filter_active" domain="[('state', '=', 'active')]"/>
                <filter string="Uzadılıb" name="filter_extended" domain="[('state', '=', 'extended')]"/>
                <separator/>
                <filter string="1FIT" name="filter_1fit" domain="[('promo_type', '=', '1fit')]"/>
                <filter string="PUSH30" name="filter_push30" domain="[('promo_type', '=', 'push30')]"/>
                <filter string="PUSH30+" name="filter_push30_plus" domain="[('promo_type', '=', 'push30_plus')]"/>
                <filter string="Tripsome" name="filter_tripsome" domain="[('promo_type', '=', 'tripsome')]"/>
                <separator/>
                <filter string="Nağd" name="filter_cash" domain="[('payment_type', '=', 'cash')]"/>
                <filter string="Kartdan karta" name="filter_card" domain="[('payment_type', '=', 'card')]"/>
                <filter string="Abunəçi" name="filter_abonent" domain="[('payment_type', '=', 'abonent')]"/>
                <separator/>
                <group expand="0" string="Qruplaşdırma">
                    <filter string="Müştəri" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Vəziyyət" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tətbiq" name="group_promo" context="{'group_by': 'promo_type'}"/>
                    <filter string="Ödəniş Növü" name="group_payment" context="{'group_by': 'payment_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Active Sessions LIST (Gözləmədə və Aktiv sessiyalar) -->
    <record id="view_active_sessions_list" model="ir.ui.view">
        <field name="name">active.badminton.session.genclik.list</field>
        <field name="model">badminton.session.genclik</field>
        <field name="arch" type="xml">
            <list string="Aktiv Sessiyalar"
                  class="genclik-active-sessions-list"
                  decoration-muted="state=='draft'"
                  decoration-success="state=='active' and not time_expired and not warn10_sent"
                  decoration-info="state=='extended' and not time_expired and not warn10_sent"
                  decoration-danger="warn10_sent or time_expired"
                  create="false"
                  default_order="created_at asc">
                <field name="queue_number" string="Növbə" invisible="state != 'draft'"/>
                <field name="partner_id"/>
                <field name="session_package_id"/>
                <field name="promo_type"/>
                <field name="payment_type"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="state"/>
                <field name="created_at" invisible="1"/>
                <field name="time_expired" invisible="1"/>
                <field name="warn10_sent" invisible="1"/>
                <button name="start_session_manual" string="Başlat" type="object" icon="fa-play" 
                        invisible="state != 'draft'" class="btn-success"/>
                <button name="extend_session" string="Uzat" type="object" icon="fa-clock-o"
                        invisible="state not in ['active', 'extended']"/>
                <button name="complete_session" string="Tamamla" type="object" icon="fa-check"
                        invisible="state not in ['active', 'extended']"/>
            </list>
        </field>
    </record>

    <!-- QR Scanner FORM (unchanged) -->
    <record id="view_qr_scanner_form" model="ir.ui.view">
        <field name="name">qr.scanner.genclik.form</field>
        <field name="model">badminton.session.genclik</field>
        <field name="arch" type="xml">
            <form string="QR Kod Oxuyucu">
                <sheet>
                    <div class="oe_title">
                        <h1>QR Kod Oxuyucu</h1>
                    </div>
                    <group>
                        <field name="partner_id" string="Müştəri Seçin (Manual)"
                               domain="[('is_company', '=', False), ('sport_type', 'in', ['badminton', 'both']), ('branch', '=', 'genclik')]"/>
                        <field name="duration_hours"/>
                    </group>
                    <footer>
                        <button name="start_session_manual" string="Sessiyanı Başlat"
                                type="object" class="btn-primary"/>
                        <button string="Ləğv et" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window actions (unchanged) -->
    <record id="action_badminton_session_genclik" model="ir.actions.act_window">
        <field name="name">Bütün Sessiyalar</field>
        <field name="res_model">badminton.session.genclik</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_badminton_session_genclik_list"/> <!-- ƏSAS SƏTİR -->
        <field name="search_view_id" ref="view_badminton_session_genclik_search"/>
        <field name="context">{}</field>
    </record>

    <record id="action_active_sessions" model="ir.actions.act_window">
        <field name="name">Aktiv Sessiyalar</field>
        <field name="res_model">badminton.session.genclik</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_active_sessions_list"/>
        <field name="search_view_id" ref="view_active_sessions_genclik_search"/>
        <field name="domain">[('state', 'in', ['draft', 'active', 'extended'])]</field>
        <field name="context">{
            'create': False,
            'search_default_order_by_queue': 1
        }</field>
    </record>

    <record id="action_qr_scanner" model="ir.actions.act_window">
        <field name="name">QR Kod Oxuyucu</field>
        <field name="res_model">badminton.session.genclik</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_qr_scanner_form"/>
        <field name="target">new</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>
</odoo>
