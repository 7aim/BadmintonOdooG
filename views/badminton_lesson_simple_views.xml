            </form>
        </field>
    </record>

    <!-- Badminton Lesson Simple List View -->
    <record id="view_badminton_lesson_simple_genclik_list" model="ir.ui.view">
        <field name="name">badminton.lesson.simple.genclik.list</field>
        <field name="model">badminton.lesson.simple.genclik</field>
        <field name="arch" type="xml">
            <list string="Badminton D…ôrsl…ôri"
                  class="genclik-badminton-subscription-list"
                  decoration-success="state=='active'" 
                  decoration-danger="subscription_payment_status=='overdue'" 
                  decoration-info="state=='completed'" decoration-muted="state=='cancelled'"
                  decoration-warning="subscription_payment_status=='warning'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="group_ids" widget="many2many_tags"/>
                <field name="lesson_fee"/>
                <field name="total_months"/>
                <field name="total_payments"/>
                <field name="last_payment_date"/>
                <field name="payment_date"/>
                <field name="end_date"/>
                <!--field name="total_attendances"/-->
                <field name="current_month_attendances"/>
                <field name="subscription_payment_status" invisible="1"/>
                <field name="state" widget="badge" decoration-success="state=='active'" decoration-info="state=='frozen'" decoration-danger="state=='cancelled'" decoration-warning="state=='cancel_requested'"/>
            </list>
        </field>
    </record>

