<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Badminton Package Form View -->
    <record id="view_badminton_package_genclik_form" model="ir.ui.view">
        <field name="name">badminton.package.genclik.form</field>
        <field name="model">badminton.package.genclik</field>
        <field name="arch" type="xml">
            <form string="Badminton Paketi">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="package_type"/>
                            <field name="balance_count" invisible="package_type != 'subscription'"/>
                        </group>
                        <group>
                            <field name="discount_percent"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Qiymətlər">
                        <group>
                            <field name="adult_price"/>
                            <field name="child_price"/>
                        </group>
                        <group>
                            <field name="student_price"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Badminton Package list View -->
    <record id="view_badminton_package_genclik_list" model="ir.ui.view">
        <field name="name">badminton.package.genclik.list</field>
        <field name="model">badminton.package.genclik</field>
        <field name="arch" type="xml">
            <list string="Badminton Paketləri">
                <field name="name"/>
                <field name="package_type"/>
                <field name="discount_percent"/>
                <field name="adult_price"/>
                <field name="child_price"/>
                <field name="student_price"/>
                <field name="balance_count" invisible="package_type != 'subscription'"/>
                <field name="active"/>
            </list>
        </field>
    </record>
</odoo>